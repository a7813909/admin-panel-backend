{
  "name": "my-personnel-management-backend",
  "version": "1.0.0",
  "description": "Backend API for a personnel management admin panel, built with Node.js, Express, TypeScript, Prisma, and PostgreSQL.",
  "main": "dist/server.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only --files src/server.ts",
    "test": "echo \"No tests yet!\" && exit 0",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:generate": "npx prisma generate",
    "prisma:dbPull": "npx prisma db pull",
    "prisma:studio": "npx prisma studio",
    "copy:assets": "copyfiles -u 1 src/**/*.env dist",
    "postbuild": "npm run copy:assets"
  },
  "keywords": [
    "node",
    "typescript",
    "prisma",
    "admin-panel",
    "postgresql"
  ],
  "author": "Alex_Yanikoff",
  "license": "ISC",
  "dependencies": {
    "@mantine/core": "^8.3.9",
    "@mantine/form": "^8.3.9",
    "@mantine/hooks": "^8.3.9",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.11",
    "winston": "^3.18.3",
    "zod": "^4.1.12",
    "typescript": "^5.9.3",
    "@prisma/client": "^5.2.0"  
  },
  "devDependencies": {
    "@prisma/internals": "^5.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.2", 
    "@types/nodemailer": "^7.0.4",
    "@types/winston": "^2.4.4",
    "copyfiles": "^2.4.1",     
    "prisma": "^5.2.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"     
  }
}
